<h1 class="mt-3">Lista de usuarios</h1>

<table class="table table-dark mt-3 border border-2 border-secondary">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">nome</th>
      <th scope="col">email</th>
      <th scope="col">telefone</th>
      <th scope="col">cpf</th>
      <th scope="col">mensagem</th>
      <th scope="col">deletar</th>
      <th scope="col">editar</th>
    </tr>
  </thead>
  <tbody>
    <% if (usuarios.length> 0) { %>
      <% usuarios.forEach(usuario=> { %>
        <tr>
          <td scope="row">
            <%= usuario.id %>
          </td>
          <td>
            <%= usuario.nome %>
          </td>
          <td>
            <%= usuario.email %>
          </td>
          <td>
            <%= usuario.cpf %>
          </td>
          <td>
            <%= usuario.telefone %>
          </td>
          <td>
            <%= usuario.mensagem %>
          </td>
          <td><a href="/deletar/<%= usuario.id %> " class="btn text-light btn-danger nav-link p-1"> del </a></td>
          <td><a href="/edit/<%= usuario.id %> " class="btn text-light btn-danger nav-link p-1"> edit </a></td>
        </tr>
        <% }) %>
          <% } else { %>
            <span>Sem ususarios cadastrados</span>
            <% } %>
  </tbody>
</table>