<body class="d-flex h-100 text-center text-bg-dark">
  

  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
      <div>
        <h3 class="float-md-start mb-0">HelpArara</h3>
        <nav class="nav nav-masthead justify-content-center float-md-end">
          <a class="nav-link fw-bold py-1 px-0 active" aria-current="page" href= "/">Home</a>
          <a class="nav-link fw-bold py-1 px-0" href= "/cadastrar">Cadastro</a>
          <a class="nav-link fw-bold py-1 px-0" href="#">Sobre n√≥s</a>
        </nav>
      </div>
    </header>

    <main class="px-3">
        <h1 class="mt-3">Lista de ususarios</h1>

        <table class="table table-dark mt-3 border border-2 border-secondary">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">nome</th>
                    <th scope="col">email</th>
                    <th scope="col">telefone</th>
                    <th scope="col">cpf</th>
                    <th scope="col">mensagem</th>
                    <th scope="col">deletar</th>
                    <th scope="col">editar</th>
                </tr>
            </thead>
            <tbody>
                <% if (usuarios.length > 0) { %>
                    <% usuarios.forEach(usuario=> { %>
                        <tr>
                            <td scope="row"><%= usuario.id %> </td>
                            <td><%= usuario.nome %></td>
                            <td><%= usuario.email %></td>
                            <td><%= usuario.cpf %></td>
                            <td><%= usuario.telefone %></td>
                            <td><%= usuario.mensagem %></td>
                            <td><a href = "/deletar/<%= usuario.id %> " class="btn text-light btn-danger nav-link p-1"> del </a></td>
                            <td><a href = "/edit/<%= usuario.id %> " class="btn text-light btn-danger nav-link p-1"> edit </a></td>
                        </tr>
                        <% }) %>
                <% } else { %>
                    <span>Sem ususarios cadastrados</span>
                <% } %>
            </tbody>
        </table>
    </main>

    <footer class="mt-auto text-white-50">
      <p> by <a
          href="https://twitter.com/mdo" class="text-white">@HelpArara</a>.</p>
    </footer>
  </div>

